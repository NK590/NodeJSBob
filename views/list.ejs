<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <title>밥 준 시간</title>
</head>

<body>
    <div class="container">
        <h4 class="ml-2 my-3">밥 준 시간</h4>
        <ul class="list-group">
            <% for (var i = posts.length - 1; i >= 0; i--) { %>
                <li class="list-group-item">
                    <span>
                        <%= posts[i].년 %>년 <%= posts[i].월 %>월 <%= posts[i].일 %>일 <%= posts[i].시 %>시 <%= posts[i].분 %>분
                    </span>
                    <button class="delete btn btn-danger" data-id="<%= posts[i]._id %>">삭제</button>
                </li>
                <% } %>
        </ul>
        <button type="button" id="backBtn" class="btn btn-dark">뒤로가기</button>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
    <script>
        $('.delete').click(function(e) {
            var textNo = e.target.dataset.id;
            let confirmForm = confirm('정말 삭제하시겠습니까?')
            if (confirmForm) {
                $.ajax({
                    method: 'DELETE',
                    url: '/delete',
                    data: {
                        _id: textNo
                    }
                }).done((result) => {
                    console.log('성공');
                    alert('삭제 성공')
                    $(this).parent('li').fadeOut();
                }).fail((a, b, c) => {
                    console.log(a, b, c)
                })
            }
        })
        $('#backBtn').on('click', () => {
            location.href = '/'
        })
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous"></script>
</body>

</html>